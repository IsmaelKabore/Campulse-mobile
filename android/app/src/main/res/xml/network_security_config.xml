<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production: Only HTTPS traffic allowed -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Note: Cleartext traffic for localhost is only allowed in debug builds -->
    <!-- See android/app/src/debug/res/xml/network_security_config.xml for debug config -->
</network-security-config>

